<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Weather App</display-name>

  <!-- Ensure a GUID is created and attached to the session for every request -->
  <filter>
    <filter-name>GuidFilter</filter-name>
    <filter-class>com.example.weatherapp.filter.GuidFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>GuidFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Weather servlet -->
  <servlet>
    <servlet-name>WeatherServlet</servlet-name>
    <servlet-class>com.example.weatherapp.servlet.WeatherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WeatherServlet</servlet-name>
    <url-pattern>/weather</url-pattern>
  </servlet-mapping>

  <context-param>
    <param-name>OPENWEATHER_API_KEY</param-name>
    <param-value>fd19b8073505ced4785050b261910b3b</param-value>
  </context-param>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
